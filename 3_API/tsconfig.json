{
  "version": "2.0.2",
  "conpileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "lib": ["es2015", "es2016", "es2017"],
    "types": ["node"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
